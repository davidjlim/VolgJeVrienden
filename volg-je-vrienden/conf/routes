# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /signin                     controllers.DatabaseController.signin

POST    /signup                     controllers.DatabaseController.signup

POST    /updateGPS                  controllers.DatabaseController.updateGPS

POST    /makeRequest                controllers.DatabaseController.makeRequest

POST    /getRequests                controllers.DatabaseController.getRequests

POST    /getFriends                 controllers.DatabaseController.getFriends

POST    /addImage                   controllers.DatabaseController.addImage

POST    /getOwnImage                controllers.DatabaseController.getOwnImage

POST    /addFriend                  controllers.DatabaseController.addFriend

POST    /removeFriend               controllers.DatabaseController.removeFriend

POST    /getVisibility              controllers.DatabaseController.getVisibility

POST    /setVisibility              controllers.DatabaseController.setVisibility
